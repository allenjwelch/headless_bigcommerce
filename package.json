		"axios": "^0.18.0",
		"body-parser": "^1.18.3",
		"concurrently": "^4.1.0",
		"dotenv": "^6.2.0",
		"express": "^4.16.3",
		"if-env": "^1.0.4",
		"promise": "^8.0.1",
		"request": "^2.87.0",
		"xmlhttprequest": "^1.8.0"
	}
}
